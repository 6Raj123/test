<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
    </style>

    <style name="CustomTextViewHomeActivity" parent="android:style/Theme">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomEditText" parent="android:style/Theme">
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_15sp</item>
    </style>

    <style name="CustomTextViewHomeActivityListing" parent="android:style/Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_15dp</item>
        <item name="android:layout_toEndOf">@id/imageView</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextViewHomeActivityListingHeading" parent="CustomTextViewHomeActivityListing">
        <item name="android:textSize">@dimen/text_size_15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextViewHomeActivityListingSubHeading" parent="CustomTextViewHomeActivityListing">
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:alpha">.5</item>
    </style>

    <style name="CustomTextViewHomeActivityCategory" parent="android:style/Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">.5</item>
    </style>
</resources>